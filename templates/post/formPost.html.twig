{% extends 'base.html.twig' %}

{% block title %}Ajouter un post
{% endblock %}

{% block body %}
	<style>
		h1,
		form,
		input,
		textarea,
		p {
			padding: 0;
			margin: 0;
			outline: none;
			font-family: Roboto, Arial, sans-serif;
			font-size: 16px;
			color: #666;
		}
		h1 {
			padding: 10px 0;
			font-size: 32px;
			font-weight: 300;
			text-align: center;
		}
		p {
			font-size: 12px;
		}
		hr {
			color: #a9a9a9;
			opacity: 0.3;
		}
		.main-block {
			max-width: 80%;
			min-height: 260px;
			padding: 20px 0;
			margin: auto;
			border-radius: 5px;
			border: solid 1px #ccc;
			box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.31);
			background: #ebebeb;
		}
		form {
			margin: 0 10px;
		}

		textarea {
			rows: 10;
			height: 80px;
			width: 100%;
			margin: 13px 0 0 -5px;
			padding-left: 12px;
			border-radius: 5px 5px 5px 5px;
			border: solid 1px #cbc9c9;
			box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.09);
			background: #fff;
		}
		input[type=text] {
			width: 100%;
			height: 36px;
			margin: 13px 0 0 -5px;
			padding-left: 10px;
			border-radius: 5px 5px 5px 5px;
			border: solid 1px #cbc9c9;
			box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.09);
			background: #fff;
		}
		.block {
			margin-top: 10px;
			text-align: center;
		}
		.button-create,
		.a-delete {
			margin: 10px auto;
			border-radius: 5px;
			border: none;
			font-size: 14px;
			font-weight: 600;
			color: #fff;
		}
		.button-create {
			width: 95%;
			background: #dcb124;
			padding: 10px;
		}

		button:hover {
			background: #b18f1d;
		}
		.a-delete {
			background: #B22222;
			text-decoration: none;
			padding: 10px 80px;
		}
		.a-delete:hover {
			color: white;
			text-decoration: none;
			background: #8B0000;

		}
		.texte {
			padding: 30px;
		}
	</style>
	{{ form_start(Postform) }}


</br>
<div class="main-block">
	<h1>Ajout d'un post</h1>

	<hr>
	<div class="form">
		<div
			class="texte">
			{# Récupération du formulaire à partir de  PostFormType #}
			{{ form_row(Postform.titre_post) }}

			{{ form_row(Postform.description_post) }}
			<br>
			Ajouter une illustration
			{{ form_row(Postform.image_post) }}</div>

		<hr><div class="block">
			<button class="button-create" id="submit" type="submit">Créer</button>
		</div>
		<div class="block">
			<a class="a-delete" href="{{path('app_homepage')}}">Annuler</a>
		</div>
	</div>
</div>
{{ form_end(Postform) }}
{# Code à mettre pour afficher l'erreur si le code n'est pas valide
{% if errors|length > 0 %}
<ul>
{% for error in errors %}
<li>{{ error.message }}</li>
{% endfor %}
</ul>
{% endif %}#}{% endblock %}
