{% extends 'base.html.twig' %}

{% block title %}Ajouter un post
{% endblock %}

{% block body %}
	<style>
		h1,
		form,
		input,
		textarea,
		p {
			padding: 0;
			margin: 0;
			outline: none;
			font-family: Roboto, Arial, sans-serif;
			font-size: 16px;
			color: #666;
		}
		h1 {
			padding: 10px 0;
			font-size: 32px;
			font-weight: 300;
			text-align: center;
		}
		p {
			font-size: 12px;
		}
		hr {
			color: #a9a9a9;
			opacity: 0.3;
		}
		.main-block {
			max-width: 80%;
			min-height: 260px;
			padding: 20px 0;
			margin: auto;
			border-radius: 5px;
			border: solid 1px #ccc;
			box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.31);
			background: #ebebeb;
		}
		form {
			margin: 0 30px;
		}

		textarea {
			rows: 1000;
			height: 80px;
			width: 100%;
			margin: 13px 0 0 -5px;
			padding-left: 12px;
			border-radius: 5px 5px 5px 5px;
			border: solid 1px #cbc9c9;
			box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.09);
			background: #fff;
		}
		input[type=text] {
			width: 100%;
			height: 36px;
			margin: 13px 0 0 -5px;
			padding-left: 10px;
			border-radius: 5px 5px 5px 5px;
			border: solid 1px #cbc9c9;
			box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.09);
			background: #fff;
		}
		.block {
			margin-top: 10px;
			text-align: center;
		}
		.button-create,
		.a-delete {
			width: 100%;
			margin: 10px auto;
			border-radius: 5px;
			border: none;
			font-size: 14px;
			font-weight: 600;
			color: #fff;
		}
		.button-create {
			background: #dcb124;
			padding: 10px 0;
		}

		button:hover {
			background: #b18f1d;
		}
		.a-delete {
			background: #B22222;
			text-decoration: none;
			padding: 10px 80px;
		}
		.a-delete:hover {
			color: white;
			text-decoration: none;
			background: #8B0000;

		}
	</style>
	{{ form_start(Postform) }}
	{{ form_row(Postform.titre_post) }}
	{{ form_row(Postform.description_post) }}
	{{ form_row(Postform.image_post) }}


	{#
						</form></br><div class="main-block">
						<h1>Ajout post</h1>
						<form action="{{ path('app_homepage') }}" method="post">
						
							<hr>
							<input type="text" name="titre" id="titre" placeholder="Titre" required/>
							<textarea name="description" id="description" placeholder="Description" required/></textarea>
						<br>
						<br>
						Ajouter une illustration
						<br>
						<input type="file" name="photo" id="photo" accept=".png,.jpeg,.jpg,.svg"/>
						
						<hr>
						#}
	<div class="block">
		<button class="button-create" id="submit" type="submit">Cr√©er</button>

	</div>
</form>
<div class="block">
	<a class="a-delete" href="{{path('app_homepage')}}">Annuler</a>
</div></div>{{ form_end(Postform) }}{% endblock %}
