<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}CyberCom
			{% endblock %}
		</title>

		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
			<link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
			<link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">

			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
			<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap" rel="stylesheet">
			<link rel="stylesheet" href="{{ asset('public/css/app.css') }}">


			<style>

				footer {
					width: 100%;
					height: 1px;
				}
				body {
					background: #1A1E23;
				}

				@import url("https://fonts.googleapis.com/css?family=Raleway:400,400i,700");

				.nav {
					display: flex;
					justify-content: center;
				}
				.navli {
					padding: 15px;
				}

				.nava {
					--fill-color: #b18f1d;
					position: relative;
					display: block;
					padding: 4px 0;
					font: 700 2rem Raleway, sans-serif;
					text-decoration: none;
					text-transform: uppercase;
					-webkit-text-stroke: 2px var(--fill-color);
					background: linear-gradient(var(--fill-color) 0 100%) left / 0 no-repeat;
					color: transparent;
					background-clip: text;
					transition: 0.5s linear;
					text-align: justify;
				}
				.nava:hover {
					background-size: 100%;
					color: #dcb124;
				}
			</style>

		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}

		{% endblock %}


		<ul class="nav">
			<li class="navli">
				<a class="nava" href="{{path('app_homepage') }}">
					CyberCom
				</a>
			</li>
			<li class="navli">
				<a class="nava" href="{{path('app_utilisateur') }}">
					Mon compte
				</a>
			</li>
			<li class="navli">
				<a class="nava" href="{{path('app_login') }}">
					Connexion</a>
			</li>
		</ul>


		{% block body %}{% endblock %}<!-- Footer --><div class="container mt-5">
			<footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
				<div class="col-md-4 d-flex align-items-center">
					<span class="me-1" style="color: red;">
						<i class="fas fa-heart"></i>
					</span>
					<span class="text-muted me-1">LÃ©a</span>
				</div>


			</footer>
		</div><!-- End Footer --></head>
</html>
